[Unit]
Description=RocketPool WatchTower
After=network.target

[Service]
Type=simple
User={{ rocketpool_user }}
Restart=always
RestartSec=5
ExecStart=/usr/local/bin/rocketpoold \
  --config {{ rocketpool_data_prefix }}/config.yml \
  --settings {{ rocketpool_data_prefix }}/settings.yml \
  watchtower

[Install]
WantedBy=multi-user.target
